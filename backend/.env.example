# Database
# Either MONGODB_URI or MONGO_URI will be read by the server
MONGODB_URI=mongodb://localhost:27017/makiti
# MONGO_URI=

# JWT
JWT_SECRET=your_jwt_secret_here

# Emails
# Choose provider: 'smtp' (default) or 'maildrip'
MAIL_PROVIDER=smtp

# SMTP (generic or fallback when MAIL_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Makiti <no-reply@makiti.local>

# Maildrip over SMTP (when MAIL_PROVIDER=maildrip)
MAILDRIP_SMTP_HOST=smtp.maildrip.io
MAILDRIP_SMTP_PORT=587
MAILDRIP_SMTP_SECURE=false
MAILDRIP_SMTP_USER=your-maildrip-username
MAILDRIP_SMTP_PASS=your-maildrip-password-or-api-key
MAILDRIP_FROM=Makiti <no-reply@makiti.yourdomain>

# App URLs
APP_WEB_URL=http://localhost:5173

# Cloudinary (optional)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Google OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
